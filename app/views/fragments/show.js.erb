$('#fragment').empty().append('<%= j(render partial: 'fragments/show') %>');
$('#fragment_parent').val('<%= @fragment.id %>');
$('#facts').empty().prepend('<%== @facts.map { |f| j(render 'facts/old_fact', fact: f) }.join %>');
$('#edit-fragment-form').remove();
<% if is_current_user?(@fragment.author) %>
    $('body').append('<%= j(render partial: 'fragments/edit') %>');
    $(document).foundation();
<% end %>